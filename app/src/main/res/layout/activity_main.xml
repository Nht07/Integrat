<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/home">

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120sp"
        android:hint="Full Name"
        android:gravity="center"
        android:textColorHint="#50DDDDDD"
        android:textColor="#DDDDDD"
        android:backgroundTint="#60DDDDDD"
        android:id="@+id/entName"/>

    <EditText
        android:id="@+id/entAadhar"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170sp"
        android:hint="Aadhar Number"
        android:gravity="center"
        android:textColorHint="#50DDDDDD"
        android:textColor="#DDDDDD"
        android:backgroundTint="#60DDDDDD"
        android:inputType="number" />
    <Button
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/godeye"
        android:textAllCaps="false"
        android:text="Generate QR"
        android:textColor="#FFFFFF"
        android:id="@+id/btnGen"/>
    <View
        android:layout_width="350sp"
        android:layout_centerHorizontal="true"
        android:layout_height="2sp"
        android:layout_marginTop="310sp"
        android:background="#55AAAAAA"
        android:id="@+id/view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="God.eye by fifthMain()\nAll rights reserved."
        android:textColor="#60DDDDDD" />

    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="500sp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgQR"/>
    </LinearLayout>
</RelativeLayout>